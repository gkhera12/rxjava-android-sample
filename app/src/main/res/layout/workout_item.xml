<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:elevation="4dp"
    android:clipToPadding="false"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="12dp">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:minHeight="?android:attr/listPreferredItemHeight">

    <ImageView
        android:id="@+id/workout_image"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        app:srcCompat="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp" />
    <TextView
        android:id="@+id/workout_name"
        android:layout_width="162dp"
        android:layout_height="24dp"
        android:textAppearance="?attr/textAppearanceSearchResultSubtitle"
        tools:text="Coffee Ride"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/workout_image"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/workout_type"
        android:layout_width="164dp"
        android:layout_height="27dp"
        android:textAppearance="?attr/textAppearanceListItemSmall"
        tools:text="Base Building"
        app:layout_constraintTop_toBottomOf="@+id/workout_name"
        app:layout_constraintStart_toStartOf="@+id/workout_name"
        />

    <TextView
        android:id="@+id/workout_time"
        android:layout_width="105dp"
        android:layout_height="24dp"
        android:textAppearance="?attr/textAppearanceSearchResultSubtitle"
        tools:text="50 to 60 min"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        tools:layout_editor_absoluteX="239dp" />

    <TextView
        android:id="@+id/workout_level"
        android:layout_width="107dp"
        android:layout_height="31dp"
        android:textAppearance="?attr/textAppearanceListItemSmall"
        tools:text="Easy - Medium"
        app:layout_constraintTop_toBottomOf="@+id/workout_time"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" />

</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
